<%= form_with model: item, url: url, method: method, local: true, class:"item-form" do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <%= f.label :description %>
  <%= f.text_area :description, size: "70 x 5" %><br>
  <%= f.label :unit_price %>
  <%= f.number_field :unit_price, step: :any %><br>
  <%= f.submit button_text %>
<% end %>
