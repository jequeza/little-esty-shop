<section id="new-bulk-discount">
  <%= link_to "Create Bulk Discount", new_merchant_bulk_discount_path(@merchant) %>
</section>
<section id="upcoming-holidays">
  <h3>Upcoming US Holidays: </h3>
  <p><%= @holidays.first.holiday %></p>
  <p><%= @holidays.second.holiday %></p>
  <p><%= @holidays.third.holiday %></p>
</section>
<section id="all-merchant-bulk-discounts">
  <h1><%= @merchant.name %> Bulk Discounts</h1>
  <table>
    <tr>
      <th>Number</th>
      <th>Quantity Treshold</th>
      <th>Percentage Discount</th>
    </tr>
    <% @merchant_bulk_discounts.each do |discount| %>
        <tr id="bulk-discount-<%= discount.id %>-info">
          <td><%= discount.id %></td>
          <td><%= discount.quantity_treshold %></td>
          <td><%= discount.percentage_discount %> %</td>
          <td><%= link_to "View Bulk Discount # #{discount.id}", merchant_bulk_discount_path(@merchant, discount), method: :get %></td>
          <td><%= link_to "Delete Bulk Discount # #{discount.id}", merchant_bulk_discount_path(@merchant, discount), method: :delete %></td>
        </tr>
    <% end %>
  </table>
</section>