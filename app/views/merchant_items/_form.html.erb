<%= form_with model: item, url: "/merchant/#{@merchant.id}/items/#{item.id}", method: :patch, local: true, class:"item-form" do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, required: true %><br>
  <%= f.label :description %>
  <%= f.text_area :description, size: "70 x 5", required: true %><br>
  <%= f.label :unit_price %>
  <%= f.number_field :unit_price, step: :any, required: true %><br>
  <%= f.submit button_text %>
<% end %>
