<%= link_to "Create New Merchant", new_admin_merchant_path %>
<h3> Top 5 Merchants </h3>
<% Merchant.top_five_revenue.each do |merchant| %>
<%= link_to merchant.name, admin_merchant_path(merchant)%>, Total Revenue: $<%= merchant.total_revenue %>, Top selling date for <%= merchant.name %> was <%= merchant.highest_revenue_date %><br>
<% end %>

<h3> Enabled Merchants </h3>
<% @enabled_merchants.each do |merchant| %>
  <div id=<%="merchant-#{merchant.id}"%> >
    <%=link_to merchant.name, admin_merchant_path(merchant) %> is <%= merchant.status%><br>
    <%=button_to "Disable", admin_merchant_path(merchant), method: :patch, params: {status: "Disabled"} %>
  </div>
<% end %>
<h3> Disabled Merchants </h3>
<% @disabled_merchants.each do |merchant| %>
  <div id=<%="merchant-#{merchant.id}"%> >
    <%=link_to merchant.name, admin_merchant_path(merchant) %> is <%= merchant.status%><br>
    <%=button_to "Enable", admin_merchant_path(merchant), method: :patch, params: {status: "Active"} %>
  </div>
<% end %>
